
accentColor = #9db8e1;
lightAccentColor = accentColor + 80%;
darkTextColor = #777;
lightTextColor = #FFF;

html, body {
    padding: 0;
    margin: 0;
    color: darkTextColor;
}

* {
    box-sizing: border-box;
}

.new-item {
    background-color: accentColor;
    padding: 20px;
    margin: 0;
    box-shadow: 0 -5px 10px 10px #CCC;

    h2 {
        color: lightTextColor;
        margin-top: 0;
    }
}

.item-list {
    padding: 20px 0;
    margin: 0;

    ul {
        list-style-type: none;
        padding: 0;

        li {
            font-size: 18px;
            padding: 10px 22px;
            border-top: 1px solid accentColor;

            &:nth-child(even) {
                background-color: lightAccentColor;
            }

            &:first-child {
                border-width: 0;
            }
        }

    }
}