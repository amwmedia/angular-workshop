
accentColor = #9db8e1;
xLightAccentColor = accentColor + 90%;
lightAccentColor = accentColor + 65%;
darkTextColor = #777;
disabledTextColor = #CCC;
lightTextColor = #FFF;

html, body {
    padding: 0;
    margin: 0;
    color: darkTextColor;
}

* {
    box-sizing: border-box;
}

.new-item {
    background-color: accentColor;
    padding: 20px;
    margin: 0;
    box-shadow: 0 -5px 10px 10px #CCC;

    h2 {
        color: lightTextColor;
        margin-top: 0;
    }
}

.item-list {
    padding: 30px 0;
    margin: 0;

    ul {
        list-style-type: none;
        padding: 0;

        li {
            font-size: 18px;
            padding: 10px 22px;
            border-top: 1px solid lightAccentColor;

            transition: all .3s;

            &:nth-child(even) {
                background-color: xLightAccentColor;
            }

            &:last-child {
                border-bottom: 1px solid lightAccentColor;
            }

            &:hover {
                color: #FFF;
                background-color: accentColor;
            }

            &.done {
                text-decoration: line-through;
                color: disabledTextColor;
                background-color: disabledTextColor + 70%;
            }
        }
    }
}