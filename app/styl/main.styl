lightAccentColor = #CCDDEF;
darkTextColor = #555555;

html, body {
    padding: 0;
    margin: 0;
    color: darkTextColor;
}

* {
    box-sizing: border-box;
}

.new-item {
    background-color: lightAccentColor;
    padding: 20px;
    margin: 0;
    box-shadow: 0 -5px 10px 10px #CCC;

    h2 {
        color: #000;
        margin-top: 0;
    }
}

.item-list {
    padding: 20px 0;
    margin: 0;

    ul {
        list-style-type: none;
        padding: 0;

        li {
            font-size: 18px;
            padding: 10px 22px;

            &:nth-child(even) {
                background-color: lightAccentColor;
            }
        }

    }
}